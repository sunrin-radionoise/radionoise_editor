    <Grid x:Name="grid1">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Back/D/1.jpg"/>
        </Grid.Background>
        <Grid x:Name="grid" HorizontalAlignment="Center" Height="193" Margin="0,0,0,0" VerticalAlignment="Center" Width="276" Background="#99000000" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <TextBox x:Name="txtID" HorizontalAlignment="Center" Height="23" Margin="80,42,76,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="#190E0E0E" RenderTransformOrigin="0.5,0.5" Foreground="White">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <PasswordBox x:Name="txtPass" HorizontalAlignment="Center" Height="23" Margin="80,70,76,0"  VerticalAlignment="Top" Width="120" Background="#19000000" RenderTransformOrigin="0.5,0.5" Foreground="White">
