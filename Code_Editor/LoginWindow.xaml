                        <GradientStop Color="#FF00AC27" Offset="1"/>
                        <GradientStop Color="#FF00FF3A"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <CheckBox x:Name="checkBox" Content="Auto Login" HorizontalAlignment="Left" Margin="80,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Foreground="White">
