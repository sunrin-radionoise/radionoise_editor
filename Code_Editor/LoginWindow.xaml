                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </PasswordBox.RenderTransform>
            </PasswordBox>
            <TextBox x:Name="txtName" HorizontalAlignment="Center" Height="23" Margin="80,70,76,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" Background="#19FFFFFF" RenderTransformOrigin="0.5,0.5" Visibility="Hidden" Foreground="White">
