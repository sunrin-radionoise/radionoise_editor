<Window x:Class="Code_Editor.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_Editor"
        mc:Ignorable="d"
        Title="Splash" Height="450" Width="800" WindowStyle="None">
    <Window.Resources>
        <Storyboard x:Key="Loading"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Resources/splash.png"/>
    </Window.Background>

    <Grid>
        <Image HorizontalAlignment="Left" Height="53" Margin="410,184,0,0" VerticalAlignment="Top" Width="344" Source="Resources/title.png" Stretch="Fill"/>
    </Grid>
</Window>
