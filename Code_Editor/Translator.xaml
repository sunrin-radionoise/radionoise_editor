<Window x:Class="Code_Editor.Translator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_Editor"
        mc:Ignorable="d"
        Title="Translator" Height="157.5" Width="272.5" ResizeMode="NoResize">
    <Grid>
        <TabControl>
            <TabItem Header="Color">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="RGB Color" Grid.Row="0">
                        <Grid>
                            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="246"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Hex Color" Grid.Row="1">
                        <Grid>
                            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="246"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="System">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Base" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38*"/>
                                <RowDefinition Height="39*"/>
                            </Grid.RowDefinitions>
                            <ComboBox Margin="1,5,1,5" Grid.Row="0"></ComboBox>
                            <TextBox Margin="1,5,1,5" Grid.Row="1"></TextBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Translated" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38*"/>
                                <RowDefinition Height="39*"/>
                            </Grid.RowDefinitions>
                            <ComboBox Margin="1,5,1,5" Grid.Row="0"></ComboBox>
                            <TextBox Margin="1,5,1,5" Grid.Row="1"></TextBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
